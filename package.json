{
    "name": "squama-ui-react",
    "private": false,
    "version": "0.0.0-alpha.9",
    "author": "Hiroki Nakatani <@1101hiroki_n>",
    "description": "Squama UI implemented with React",
    "repository": {
        "type": "git",
        "url": "https://github.com/1101hirokin/squama-ui-react"
    },
    "bugs": {
        "url": "https://github.com/1101hirokin/squama-ui-react/issues"
    },
    "type": "module",
    "main": "dist/index.js",
    "types": "dist-types/index.d.ts",
    "files": [
        "dist",
        "dist-types"
    ],
    "sideEffects": [
        "*.css"
    ],
    "scripts": {
        "dev": "vite --host",
        "tsc": "tsc --p ./tsconfig.app.json aceResolution",
        "build": "vite build & tsc --build --force",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "preview": "vite preview"
    },
    "dependencies": {
        "chroma-js": "^2.4.2",
        "clsx": "^2.1.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@types/chroma-js": "^2.4.4",
        "@types/node": "^20.14.11",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.15.0",
        "@typescript-eslint/parser": "^7.15.0",
        "@vitejs/plugin-react": "^4.3.1",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.7",
        "prettier": "^3.3.3",
        "typescript": "^5.2.2",
        "vite": "^5.3.4",
        "vite-plugin-dts": "^4.0.3"
    },
    "keywords": [
        "react",
        "ui",
        "component",
        "squama",
        "designsystem"
    ]
}
